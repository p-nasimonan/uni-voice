<%# ホーム画面のレイアウト %>
<div class="container mx-auto px-4 py-8">
  <%# 検索セクション %>
  <div class="max-w-4xl mx-auto mb-8">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">シラバスを検索</h1>
      
      <%= form_with url: search_syllabuses_path, method: :get, class: "space-y-4" do |f| %>
        <div class="flex gap-4">
          <%# 検索バー %>
          <div class="flex-1">
            <%= f.text_field :query, 
                placeholder: "講義名や教授名で検索", 
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <%# 大学選択%>
          <div class="mb-4">
            <label for="university" class="block text-sm font-medium text-gray-700 mb-1">大学</label>
            <select name="university_id" id="university" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
              <option value="">大学を選択してください</option>
              <% @universities.each do |university| %>
                <option value="<%= university.id %>"><%= university.name %></option>
              <% end %>
            </select>
          </div>
          
          <%# 検索ボタン %>
          <div>
            <%= f.submit "検索", 
                class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# 近くの大学のシラバスセクション %>
  <div class="max-w-4xl mx-auto">
    <h2 class="text-xl font-bold text-gray-800 mb-4">近くの大学のシラバス</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <%# シラバスカード %>
      <% @random_syllabuses&.each do |syllabus| %>
        <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
          <h3 class="font-semibold text-lg mb-2"><%= syllabus.title %></h3>
          <p class="text-gray-600 text-sm mb-2"><%= syllabus.university.name %></p>
          <p class="text-gray-500 text-sm">
            <%= syllabus.professor %> | <%= syllabus.credits %>単位
          </p>
          <%= link_to "詳細を見る", syllabus_path(syllabus), 
              class: "mt-4 inline-block px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
