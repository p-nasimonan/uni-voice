<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">シラバス一覧</h1>
    <%= link_to '新規投稿', new_syllabus_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="mb-8">
    <%= form_tag search_syllabuses_path, method: :get, class: 'flex gap-4' do %>
      <%= text_field_tag :q, params[:q], class: 'flex-1 rounded border p-2', placeholder: '大学名、学部名、科目名などで検索' %>
      <%= submit_tag '検索', class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <div class="grid gap-6">
    <% @syllabuses.each do |syllabus| %>
      <div class="bg-white shadow rounded-lg p-6 hover:shadow-lg transition-shadow">
        <%= link_to syllabus_path(syllabus), class: 'block' do %>
          <h2 class="text-xl font-semibold mb-2"><%= syllabus.title %></h2>
          <div class="text-gray-600 mb-2">
            <p><%= syllabus.university %> <%= syllabus.faculty %> <%= syllabus.department %></p>
            <p>担当教員: <%= syllabus.professor %></p>
            <p><%= syllabus.year %>年度 <%= syllabus.semester %> <%= syllabus.credits %>単位</p>
          </div>
          <p class="text-gray-700"><%= truncate(syllabus.content, length: 200) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
