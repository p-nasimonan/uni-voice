<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>大学一覧</h1>
    <%= link_to '新規登録', new_university_path, class: 'btn btn-primary' %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @universities.each do |university| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <%= link_to university_path(university), class: 'text-decoration-none text-dark' do %>
              <h2 class="card-title h5 mb-2"><%= university.name %></h2>
              <p class="card-text text-muted mb-2"><%= university.email_domain %></p>
              <div class="mt-3 text-muted small">
                <p class="mb-0">シラバス数: <%= university.syllabuses.count %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
